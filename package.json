{
    "name": "@clapper/monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "A monorepo for the Clapper project. Individual packages are in the packages directory.",
    "workspaces": [
      "packages/*"
    ],
    "scripts": {
        "install": "npm install --workspaces",
        "dev": "npm install && npm run dev --workspaces",
        "start": "npm run start --workspaces",
        "build": "npm install && npm run build --workspaces",
        "test": "npm run test --workspaces",
        "format": "npm run format --workspaces"
    }
  }
  